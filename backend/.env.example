# =============================================================================
# Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the actual values
# NEVER commit .env to version control - it contains secrets!
# =============================================================================

# =============================================================================
# Environment Settings
# =============================================================================
# Application environment: development, staging, production
ENV=development

# =============================================================================
# Error Tracking (Sentry)
# =============================================================================
# Sentry DSN for backend error tracking
# Get this from: https://sentry.io/settings/[org]/projects/[project]/keys/
SENTRY_BACKEND_DSN=

# Release version for Sentry error grouping and tracking
# Format: app-name@version (e.g., keto-meal-plan-api@1.0.0)
SENTRY_RELEASE=

# =============================================================================
# Application Configuration
# =============================================================================
# Frontend application URL (used for CORS, redirects, email links)
# Development: http://localhost:3000
# Production: https://yourdomain.com
APP_URL=http://localhost:3000

# =============================================================================
# Database Configuration (Neon PostgreSQL)
# =============================================================================
# Neon serverless PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require&channel_binding=require
# Get this from: https://console.neon.tech/app/projects
# IMPORTANT: Use the "Pooled connection" string for serverless environments
NEON_DATABASE_URL=

# =============================================================================
# Redis Cache & Rate Limiting
# =============================================================================
# Standard Redis connection URL (for local development or managed Redis)
# Format: redis://[host]:[port]/[db]
# Local development: redis://localhost:6379/0
# Redis Cloud: redis://:[password]@[host]:[port]/[db]
REDIS_URL=

# Upstash Redis REST API URL (alternative for serverless)
# Get this from: https://console.upstash.com/redis/[database-id]
UPSTASH_REDIS_REST_URL=

# Upstash Redis REST API authentication token
# Get this from: https://console.upstash.com/redis/[database-id]
UPSTASH_REDIS_REST_TOKEN=

# =============================================================================
# AI Service API Keys
# =============================================================================
# Google Gemini API key for AI meal plan generation
# Get this from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API key (alternative/fallback for AI generation)
# Get this from: https://platform.openai.com/api-keys
OPEN_AI_API_KEY=

# =============================================================================
# Payment Processing (Paddle)
# =============================================================================
# Paddle API key for payment processing
# Get this from: https://vendors.paddle.com/authentication-v2
# Use sandbox key for development, live key for production
PADDLE_API_KEY=

# Paddle webhook secret for verifying webhook signatures
# Get this from: https://vendors.paddle.com/alerts-webhooks
# CRITICAL: Must match the secret configured in Paddle dashboard
PADDLE_WEBHOOK_SECRET=

# =============================================================================
# Email Service (Resend)
# =============================================================================
# Resend API key for sending verification emails
# Get this from: https://resend.com/api-keys
# Use test key for development, live key for production
RESEND_API_KEY=

# From email address for sending verification codes
# Must be verified in Resend dashboard: https://resend.com/domains
# Development: onboarding@resend.dev (test domain)
# Production: noreply@ketomealplan.com (your verified domain)
RESEND_FROM_EMAIL=noreply@ketomealplan.com

# =============================================================================
# Authentication (JWT)
# =============================================================================
# Secret key for signing JWT tokens (access tokens, signup tokens)
# Generate with: openssl rand -hex 32
# CRITICAL: Use a strong random secret in production, never commit to git
# This key is used to sign all JWT tokens (access, signup)
# If changed, all existing tokens become invalid
JWT_SECRET_KEY=

# =============================================================================
# Admin Access Control
# =============================================================================
# Admin API key for accessing admin dashboard and privileged operations
# Generate with: openssl rand -hex 32
# CRITICAL: Use a strong random key (minimum 32 characters) in production
# This key is used to authenticate admin users via X-API-Key header
ADMIN_API_KEY=

# Comma-separated list of IP addresses allowed for admin access
# Development: 127.0.0.1,::1 (localhost only)
# Production: Add your admin IPs (e.g., "203.0.113.5,198.51.100.10")
# Supports both IPv4 and IPv6 addresses
ADMIN_IP_WHITELIST=127.0.0.1,::1
